get-view "Test Explorer" | get-tree | select "MyProject/WorkspaceContext" | double-click
get-editor WorkspaceContext | get-button Apply | click

get-view "Test Explorer" | get-tree | select "MyProject/UncapturedFilesVerification" | double-click
get-editor UncapturedFilesVerification | get-button Verify | click
get-view "Execution View" | get-tree | get-item -path "UncapturedFilesVerification.*" 
    | get-property "image.path" | equals "org.eclipse.rcptt.ui/icons/launching/verification-pass.png" | verify-true

get-editor UncapturedFilesVerification | get-section "Workspace Options" | get-button "Allow uncaptured files" | uncheck
get-button "Save (M1+S)" | click
get-editor UncapturedFilesVerification | get-button Verify | click
with [get-view "Execution View"] {
    get-tree | get-item -path "UncapturedFilesVerification.*" | get-property "image.path" 
        | equals "org.eclipse.rcptt.ui/icons/launching/verification-fail.png" | verify-true
    get-editbox -after [get-label "Message:"] | get-property text 
        | equals "Folder 'Project/UnmatchedFiles/' contains unexpected 'EmptyTest.test' file" | verify-true
}
